<div class="container">
    <div class='row'>
        <div class="col s6 push-s3 m5 push-m3 l5 push-l3">
            <div class='card'>
                <div class='card-title center'>
                    <span>Login</span>
                </div>
                <div class="card-content">
                    <form class='login-form'>
                        <div>
                            <label class="form-text" for='username-login'>Username:</label>
                            <input type='text' class='form-input' id='username-login' />
                        </div>

                        <div>
                            <label class='form-text' for='password-login'>Password</label>
                            <input type='text' class='form-input' id='password-login' />
                        </div>
                        <div class='card-bottom center'>
                            <div class='buttons'>
                                <button class="btn dark-blue" type="submit" name="action">Login
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>

                            <p> or</p>
                            <p>No account yet? <a href='/signup'>Join</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src='/javascript/login.js'></script>