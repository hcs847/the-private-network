<div class="container">
  <div class='row'>
    <div class="col s6 push-s3 m5 push-m3 l5 push-l3">
      <div class='card'>
        <div class='card-title center'>
          <span>Sign up</span>
        </div>
        <div class="card-content">
          <form class='signup-form'>
            <div>
              <label class="form-text" for='firstname-signup'>First Name:</label>
              <input type='text' id='firstname-signup' />
            </div>
            <div>
              <label class="form-text" for='lastname-signup'>Last Name:</label>
              <input type='text' id='lastname-signup' />
            </div>
            <div>
              <label class="form-text" for='email-signup'>Email:</label>
              <input type='text' id='email-signup' />
            </div>
            <div>
              <label class='form-text' for='password-signup'>Password</label>
              <input type='text' id='password-signup' />
            </div>
            <div class='card-bottom center'>
              <div class='buttons'>
                <button class="btn med-green" type="submit" name="action">Join
                  <i class="material-icons right">send</i>
                </button>
              </div>

              <p> or</p>
              <p>Already joined? <a href='/login'>Login</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src='/javascript/signup.js'></script>