<div class="container">
    <div class='row'>
        <div class="col s6 push-s3 m5 push-m3 l5 push-l3">
            <div class='card'>
                <div class='card-title center'>
                    <span>Sign up</span>
                </div>
                <div class="card-content">
                    <form class='signup-form'>
                        <div>
                            <label class="form-text" for='first_name-signup'>First Name:</label>
                            <input type='text' class='form-input' id='first_name-signup' />
                        </div>
                        <div>
                            <label class="form-text" for='last_name-signup'>Last Name:</label>
                            <input type='text' class='form-input' id='last_name-signup' />
                        </div>
                        <div>
                            <label class="form-text" for='email-signup'>Email:</label>
                            <input type='text' class='form-input' id='email-signup' />
                        </div>
                        <div>
                            <label class='form-text' for='password-signup'>Password</label>
                            <input type='text' class='form-input' id='password-signup' />
                        </div>
                        {{!-- Replace with image upload --}}
                        {{!-- ========================== --}}
                        <div>
                            <label class='form-text' for='profile_img-signup'>Profile Image</label>
                            <input type='text' class='form-input' id='profile_img-signup' />
                        </div>
                        <div class='card-bottom center'>
                            <div class='buttons'>
                                <button class="btn dark-blue" type="submit" name="action">Join
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>

                            <p> or</p>
                            <p>Already joined? <a href='/login'>Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src='/javascript/signup.js'></script>