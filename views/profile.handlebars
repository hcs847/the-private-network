<div class="row">
    <div class="col s12 m3 push-m3 l4 push-l4">

        <div class="card profile">
            <div class="card-image">
                <img class='profile responsive-img' src='{{user.profile_img}}' alt="user's profile picture">
            </div>
            <div class="card-title">
                <p>{{user.first_name}} {{user.last_name}}</p>
            </div>
            <div class="card-title">
                <a class='profile' href='mailto:{{user.email}}'>Email Me</a><span class="material-icons">
                    mail
                </span>

            </div>
            <div class="card-title">
                <a class='profile' href='/feed/users/{{user.id}}'>My Posts</a><span class="material-icons">
                    article
                </span>

            </div>

        </div>
    </div>
</div>