<div class="row">
    <div class="col s1 m4 l4">
        <div class="card small">
            <div class="card-image center-img round-img">
                <img class='responsive-img' src='{{user.profile_img}}' alt="user's profile picture">

            </div>
            <div class="card-title">

                <span> {{user.first_name}} {{user.last_name}}</span>
            </div>
            <div class="card-action">
                <a href='#'><span class="material-icons">
                        article
                    </span>My Posts</a>
            </div>
        </div>

        <div class="card">
            <div class="card-title groups">
                <span class="material-icons white-text">
                    groups
                </span><span class='desktop white-text'>Groups</span>
            </div>
            {{#each groups as |group|}}
            <div class="card-action">
                <a href='#'><span>{{groupname}}</span></a>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col s12 m5 l5">
        {{#each posts as |post|}}

        <div class='card'>
            <div class="card-title">
                {{!-- replace with post title --}}
                <a href='/post/{{id}}'><span>{{title}} by {{'user.first_name'}} {{'user.last_name'}} on
                        {{format_date created_at}}</span></a>
            </div>
            <div class='card-content'>
                {{!-- replace with post content --}}
                <p>{{body}}</p>
            </div>
            {{!-- replace with user's photo if available --}}
            <div class="row">
                <div class="col s-10">
                    <div class="card-image center-img">
                        <img class='responsive-img' src={{post_img}}>
                    </div>
                </div>
            </div>
            <div class="card-action z-depth-0">

                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header"><i class="material-icons">comment</i>Comments</div>
                        <div class="collapsible-body"><span>
                                <ul>
                                    {{!-- access the parent object from the child dir --}}
                                    {{#each ../comments}}
                                    <li>{{body}} by <span class='user-name'>{{'user.first_name'}}
                                            {{'user.last_name'}}</span></li>
                                    {{/each}}
                                </ul>


                            </span></div>
                    </li>
                </ul>
            </div>


            <div class="card-action">
                <div class=" card card-round z-depth-0 comment">
                    <form class='add-comment-form z-depth-0'>
                        <div class="input-field">
                            <label class="label-icon" for="add-cmment"><i class="material-icons">add_comment</i></label>
                            <input id='add-comment' placeholder='Add a comment' type='text' name='add-comment' />
                        </div>
                    </form>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col s1 m3 l3">
        <div class="card card-round">
            <div class="card-title search-card">
                <form action='feed/search' class='search-form'>
                    <div class="input-field">
                        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                        <input id='search' placeholder='Search' type='search' name='term' required>
                    </div>
                </form>
            </div>
        </div>


        <div class="card card-round center">
            <span class="material-icons">
                edit
            </span>
            <a class="white black-text btn modal-trigger" href="#modal1">Start a Post</a>

            <!-- Modal Structure -->
            <div id="modal1" class="modal">
                <div class="modal-content">
                    <div class="row">
                        <div class="col s8 push-s2">
                            <form class='new-post-form'>
                                <div>
                                    <label class='form-text left' for="post-title">Title</label>
                                    <input type="text" class='form-input' id='post-title' name='post-title' />
                                </div>
                                <div>
                                    <label class='form-text left' for="post-body">Content</label>
                                    <textarea id='post-body' name='post-body'></textarea>
                                </div>
                                <div>
                                    <label class='form-text left' for="post-img-url">Image URL</label>
                                    <input type="text" class='form-input' id='post-img-url' name='post-img-url' />
                                    {{!-- enable once Cloudinary is implemented --}}
                                    {{!-- =========================================== --}}
                                    {{!-- <input id="fileInput" type="file" name="image" className="form-input" /> --}}
                                </div>
                                <div>
                                    <label class='form-text left' for="post-group">Group</label>
                                    <input type="text" class='form-input' id='post-group' name='post-group' />
                                </div>
                                <button type='submit' class='modal-close btn med-green'> Create</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-round center">
            <span class="material-icons">
                add_circle
            </span>
            <a class="white black-text btn modal-trigger" href="#modal2">Create a Group</a>

            <!-- Modal Structure -->
            <div id="modal2" class="modal">
                <div class="modal-content">
                    <div class="row">
                        <div class="col s8 push-s2">
                            <form class='new-group-form'>
                                <div>
                                    <label class='form-text left' for="group-name">Group Name</label>
                                    <input type="text" class='form-input' id='group-name' name='group-name' />
                                </div>
                                <div>
                                    <label class='form-text left' for="group-color">Group Color</label>
                                    <input type="text" class='form-input' id='group-color' name='group-color' />
                                </div>

                                <button type='submit' class='modal-close btn med-green'> Create</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-round center">
            <span class="material-icons">
                group_add
            </span>
            <a class="white black-text btn modal-trigger" href="#modal3">Join a Group</a>

            <div id="modal3" class="modal">
                {{> select-group groups}}
            </div>
        </div>

        <div class="card card-round center">
            <span class="material-icons">
                person_search
            </span>
            <a class="white black-text btn modal-trigger" href="#modal4">Search a User</a>

            <!-- Modal Structure -->
            <div id="modal4" class="modal">
                <div class="modal-content">
                    <div class="row">
                        <div class="col s8 push-s2">
                            <form class='search-user-form'>
                                <div>
                                    <label class='form-text left' for="user-name">User Name</label>
                                </div>
                                <button type='submit' class='modal-close btn med-green'> Search</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/add-post.js"></script>
<script src="/javascript/join-group.js"></script>
<script src="/javascript/add-group.js"></script>
<script src="/javascript/add-comment.js"></script>