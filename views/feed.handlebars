<div class="row">
    <div class="col s3 m3 l3">
        <div class="card small">
            <div class="card-image center-img">
                <img class='responsive-img ' {{!-- Replace with user's image --}}
                    src='https://cdn.pixabay.com/photo/2016/04/01/10/11/avatar-1299805__340.png'>
            </div>
            <div class="card-title">
                {{!-- Replace with user's name --}}
                <span> {{user.username}}</span>
            </div>
        </div>
        <div class="card">
            <div class="card-action">
                {{!-- Replace with user's group --}}
                <a href='#'>Group Name</a>
            </div>
        </div>
    </div>
    <div class="col s12 m5 l5">
        {{!-- run for each post --}}
        {{#each posts as |post|}}
        <div class='card'>
            <div class="card-title">
                {{!-- replace with post title --}}
                <a href='/post/{{id}}'><span>{{title}} {{format_date created_at}}</span></a>
            </div>
            <div class='card-content'>
                {{!-- replace with post content --}}
                <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Cumque facere dignissimos aut, nam
                    voluptatem aliquam id dolorem in a alias, enim doloribus perferendis natus deserunt suscipit
                    ratione
                    odit? Voluptatum, eius.</p>
            </div>
            {{!-- replace with user's photo if available --}}
            <div class="row">
                <div class="col s-10">
                    <div class="card-image center-img">
                        <img class='responsive-img' src={{post.post_img}}>
                    </div>
                </div>
            </div>
            <div class="card-action">
                {{!-- replace with comments --}}
                <a href='/post/{{id}}'># of comments</a>
            </div>
        </div>
        {{/each}}

    </div>
    <div class="col s3 m3 l3">
        <div class="card search-card">
            <div class="card-title">
                <form action='feed/search' class='search-form'>
                    <div class="input-field">
                        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                        <input id='search' placeholder='Search' type='search' name='term' required>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">

            <div class="card-content center">
                <a class="white black-text btn modal-trigger" href="#modal1"><span class="material-icons">
                        edit
                    </span>Start a Post</a>

                <!-- Modal Structure -->
                <div id="modal1" class="modal">
                    <div class="modal-content">
                        <div class="row">
                            <div class="col s8 push-s2">
                                <form class='new-post-form'>
                                    <div>
                                        <label class='form-text left' for="post-title">Title</label>
                                        <input type="text" id='post-title' name='post-title' />
                                    </div>
                                    <div>
                                        <label class='form-text left' for="post-content">Content</label>
                                        <textarea id='post-content' name='post-content'></textarea>
                                        <input id="fileInput" type="file" name="image" className="form-input" />
                                    </div>
                                    {{!-- <div class="buttons">
                                <button type='submit' class='btn med-green'>Create</button>
                            </div> --}}
                                    {{!-- <div class="modal-footer"> --}}
                                    <button type='submit' class='modal-close btn med-green'> Create</button>
                                    {{!-- </div> --}}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <script src="/javascript/add-post.js"></script>